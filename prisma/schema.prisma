  session VideoSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, userId])
  @@index([sessionId])
  @@index([userId])
  @@index([isActive])
  @@index([subscriptionId])
  @@index([quotaUsed])
  @@map("video_session_participants")
}

