  newAmount       Float?
  oldBillingCycle String?
  newBillingCycle String?
  userId          String
  reason          String?
  metadata        Json?
  createdAt       DateTime @default(now())

  @@index([subscriptionId])
  @@index([action])
  @@index([createdAt])
